{{#let
  (hash
    Content=(if
      this.renderContent
      (component
        (ensure-safe-component this.ExpanderContent)
        onInsert=this.registerContentElement
        style=this.style
      )
    )
    toggle=this.toggle
    expand=this.expand
    collapse=this.collapse
    isExpanded=this.isExpanded
    isTransitioning=this.isTransitioning
  )
  as |api|
}}
  <div
    class={{concat
      "expander"
      (if this.isTransitioning " expander--transitioning")
    }}
    tabindex="0"
    aria-expanded="{{this.api.isExpanded}}"
    ...attributes
    {{did-insert this.handleInsertElement}}
    {{did-update this.handleUpdateExpanded @expanded}}
  >
    {{yield api}}
  </div>
{{/let}}